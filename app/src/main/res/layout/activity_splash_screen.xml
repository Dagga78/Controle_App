<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SplashScreen"
        android:background="@color/grey"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1"
            android:background="@color/grey">

        <TextView
                android:text="@string/bienvenue_sur_gravity"
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/wellcome" android:layout_weight="1"
                tools:text="WELLCOME ON GRAVITY" android:textSize="36sp" android:textStyle="bold|italic"
                android:textAlignment="center" android:textAllCaps="false"
                android:textColor="#000000"/>
        <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp" app:srcCompat="@drawable/gravityv3" android:id="@+id/imageView3"
                android:layout_weight="1" android:adjustViewBounds="true"
                android:layout_marginLeft="50dp"
        />
    </LinearLayout>
</LinearLayout>