<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MainActivity"
        android:background="@color/grey">


    <LinearLayout android:layout_width="372dp" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_gravity="center"
                android:layout_marginVertical="10dp">
        <Button
                android:id="@+id/button2"

                android:text="Liste"
                android:textColor="#000000"

                android:layout_width="112dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textStyle="bold" android:textAlignment="center"

                android:onClick="menuClick"/>

        <Button
                android:id="@+id/button"

                android:text="Geolocalisation"
                android:textColor="#000000"


                android:layout_width="144dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textStyle="bold"

                android:onClick="menuClick"/>

        <Button
                android:id="@+id/button3"

                android:text="Deconnexion"
                android:textColor="#000000"


                android:layout_width="119dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textStyle="bold"

                android:onClick="menuClick"/>


